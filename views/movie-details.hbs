<div class="container mt-3">
  <h2>{{movie.title}}</h2>
  <div class="row">
    <div class="col-md-4">
      <img src="{{movie.image}}" class="img-fluid" alt="{{movie.title}}" />
    </div>
    <div class="col-md-8">
      <h3>Director</h3>
      <p>{{movie.director}}</p>
      <h3>Stars</h3>
      <ul>
        {{#each movie.stars}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
      <h3>Description</h3>
      <p>{{movie.description}}</p>
      <h3>Showtimes</h3>
      <ul>
        {{#each movie.showtimes}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>